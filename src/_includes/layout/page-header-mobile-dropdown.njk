<select class="mobile-dropdown selectpicker top-drop-menu nav hidden-md hidden-sm visible-xs hidden-lg" data-style="btn">
  {# Mobile droipdown menu... #}
  <option value="{{ langRootUrl }}/" selected="selected">{{ 'headerLinks.homepage' | i18n }}</option>
  <option value="{{ langRootUrl }}/products-grid">{{ 'headerLinks.catalog' | i18n }}</option>
  <option value="{{ langRootUrl }}/delivery">{{ 'headerLinks.delivery' | i18n }}</option>
  <option value="{{ langRootUrl }}/wholesalers">{{ 'headerLinks.wholesalers' | i18n }}</option>
  <option value="{{ langRootUrl }}/contacts">{{ 'headerLinks.contacts' | i18n }}</option>
  {% if site.showPagesMenu %}
  <optgroup label="{{ 'headerLinks.pages' | i18n }}">
    <option value="{{ langRootUrl }}/products-grid">{{ 'pages.productsGrid' | i18n }}</option>
    <option value="{{ langRootUrl }}/products-search">{{ 'pages.productsSearch' | i18n }}</option>
    <option value="{{ langRootUrl }}/single-product">{{ 'pages.singleProduct' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-page">{{ 'pages.profile' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-orders">{{ 'profile.myOrders' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-order">{{ 'profile.order' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-wishlist">{{ 'profile.myWishlist' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-login">{{ 'pages.profileLogIn' | i18n }}</option>
    <option value="{{ langRootUrl }}/profile-logon">{{ 'pages.profileLogOn' | i18n }}</option>
    <option value="{{ langRootUrl }}/shopping-cart">{{ 'pages.shoppingCart' | i18n }}</option>
    <option value="{{ langRootUrl }}/checkout">{{ 'pages.checkout' | i18n }}</option>
    {# <option value="{{ langRootUrl }}/payment-method">{{ 'pages.paymentMethod' | i18n }}</option> #}
  </optgroup>
  {% endif %}
</select>
