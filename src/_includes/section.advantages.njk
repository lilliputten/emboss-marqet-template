{# @see src/sections/advantages.md #}

{% for section in collections.sections %}
  {% if section.data.type === 'advantages' %}

    {# TODO: Section wrapper, title, content classes #}

    <div id="advantages" class="advantages page-content-container default-content-container">
      <div class="advantages-title section-title">
        <h2 class="section-title-header">{{ section.data.title }}</h2>
        {% if section.templateContent %}<div class="section-title-content">
          {{ section.templateContent | safe }}
        </div>{% endif %}
      </div>
      <div class="advantages-list">

        {% for item in advantages.items %}
          <div class="advantages-list-item">
            <div class="advantages-list-item-image"{% if item.id %} style="background-image: url({{ section.data.iconsPath }}{{ item.id }}{{ section.data.iconsExt }})"{% endif %}></div>
            <div class="advantages-list-item-text">
              {% if item.title %}<h3 class="advantages-list-item-text-title">{{ item.title }}</h3>{% endif %}
              {% if item.content %}<div class="advantages-list-item-text-content">
                {{ item.content | markdown | safe }}
              </div>{% endif %}
            </div>
          </div>
        {% endfor %}

      </div>
    </div>

  {% endif %}
{% endfor %}
