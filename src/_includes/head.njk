{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(site.url) }}{%- endset -%}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="icon" type="image/x-icon" href="{{ "/favicon.ico" | htmlBaseUrl }}" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="description" content="{{ description or site.description }}" />
<meta name="author" content="{{ site.author }}" />
<meta name="robots" content="index,follow" />
<link rel="preload" href="/css/page.css" as="style" />
<link rel="stylesheet" href="/css/page.css" />
<link rel="preload" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" as="style" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet" type="text/css" />
{#
<link rel="preload" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" as="font" type="font/woff2" crossorigin>
#}
<!-- BEGIN SOCIAL META DATA -->
<meta property="og:site_name" content="{{ site.title }}" />
<meta property="og:title" content="{{ title or site.title }}" />
<meta property="og:description" content="{{ description  or site.description }}" />
<meta property="og:url" content="{{ absolutePageUrl }}" />
<meta name="twitter:card" content="{% if image -%}summary_large_image{% else %}summary{% endif %}" />
{%- if image -%}
  <meta property="og:image" content="{{ image | url | absoluteUrl(site.url) }}" />
{%- endif -%}
<!-- ./END SOCIAL META DATA -->
<meta name="theme-color" content="#ffffff" />
<title>{{ title or site.title }}</title>
