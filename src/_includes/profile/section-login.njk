{% set langRootUrl = '/' + lang if lang !== defaultLang else '' %}

<section id="section-login">
  <div class="container no-padding">
    <div class="col-xs-12">
      <div class="box">
        <div class="icon-holder small badge-style">
          <i class="fa fa-check-circle-o"></i>
          <span class="triangle"></span>
        </div>
        <div class="box-holder" align="center">
          <h2>{{ 'pages.profileLogIn' | i18n }}</h2>
          <p class="mb-2">{{ 'profile.loginText' | i18n }}</p>

          <form class="narrow-form-box">
            <div class="field-group" id="loginEmailField">
              <label for="loginEmail">{{ 'profile.email' | i18n }}</label>
              <input id="loginEmail" type="text" class="le-input" placeholder="{{ 'profile.email' | i18n }}" />
            </div>
            <div class="field-group" id="loginPasswordField">
              <label for="loginPassword">{{ 'profile.password' | i18n }}</label>
              <input id="loginPassword" type="password" class="le-input" placeholder="{{ 'profile.password' | i18n }}" />
            </div>
            <div class="field-group" id="rememberMeCheckbox">
              <span class="checkbox-field">
                <input type="checkbox" id="check" /> <label for="check">{{ 'profile.rememberMe' | i18n }}</label>
              </span>
            </div>

            <!-- Action buttons -->
            <div class="field-group" align="center">
              <button type="submit" class="le-btn"><i class="fa fa-check"></i> {{ 'profile.login' | i18n }}</button>
            </div>
            <div class="field-group profile-secondary-links" align="center">
              <a href="{{ langRootUrl }}/profile-logon" class="btn">{{ 'profile.logon' | i18n }}</a>
              <a href="{{ langRootUrl }}/profile-restore-password" class="btn">{{ 'profile.forgotPassword' | i18n }}</a>
            </div>
          </form>

        </div>
        <div class="box-holder">
        </div>

      </div>
    </div>
  </div>
</section>

